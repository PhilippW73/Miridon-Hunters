{{> layout/header}}
<div class="row">
    <div class="col-md-8">
        <form role="form">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="text" placeholder="Name" class="form-control" id="name" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="btn-group">
                        <button class="btn btn-default">
                            Class
                        </button> 
                        <button data-toggle="dropdown" class="btn btn-default dropdown-toggle">
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" id="classDropdown">
                            <li>
                                {{#each Class}}
                                    <a href="{{class_id}}">{{class_name}}</a>
                                {{/each}}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <textarea class="form-control" rows="3" placeholder="Character Description" id="description"></textarea>
            </div>
        </form>
        {{!-- <p>Total Points Left: {{pointsLeft}}</p> --}}
        <div class="row">
            <div class="col-md-6">
                {{#each stats}}
                    {{!-- {{> characters/statInput-block}} --}}
                    {{name}}: {{../Class/(reference)}}
                {{/each}}
            </div>
            <div class="col-md-6">
                {{!-- {{#each stats}}
                    {{#if sleepy}}
                        {{> characters/statInput-block}}
                    {{/if}}
                {{/each}} --}}
            </div>
        </div>
        <br>
        <br>

        <button type="submit" class="btn btn-default">
            Submit Character
        </button>
    </div>
    <div class="col-md-4">
        <div class="thumbnail">
            <img alt="Bootstrap Thumbnail First" src="{{imageUrl}}" />
            <div class="caption form-group">
                <label class="btn btn-primary btn-file">
                        Add New Image <input type="file" style="display: none;">
                </label>
                <label for="exampleInputFile">
                        {{newImageName}}
                </label>
                <p class="help-block">
                    Please add an image 600px by 600px.
                </p>
            </div>
        </div>                    
    </div>
</div>
{{> layout/footer}}